<%= stylesheet_link_tag "default" %>
<div class="container">
  <h1 class="header"><%= @movie.title %></h1>
   <div class="divshowimage">
            <%= image_tag "#{@movie.id}.jpeg" %>
   </div> 
  <div class="divyear">
  <span class="label">Released Year: </span>
  <%= @movie.year %>
</div>


  <div class="divfloatright">
  <span class="label">IMDB Rating:</span>
  <%= @movie.rating %>
</div>
<div class="clear"></div>
  <div class="divfloatright">
<%= link_to 'Edit', edit_movie_path(@movie) %> | 
<%= link_to 'Back', movies_path %>
</div>
<div class="clear"></div>
  <div id="description">
  <span class="label">Description: </span>
  <%= @movie.description %>
  </div>
<div id="divreviews">
<h2>Reviews</h2>
  <%= render @movie.reviews %>
<div id="divaddreview">
<h2>Add a review:</h2>
  <%= render 'reviews/form' %>
</div>
</div>


</div>